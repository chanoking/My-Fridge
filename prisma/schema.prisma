// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  userId Int @default(autoincrement()) @id
  email String @unique
  name String
  nickname String @unique
  password String
  trash Int @default(0)
  success Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  fridge Refrigerators[]
  food Foods[]
}

model Refrigerators {
  fridgeId Int @default(autoincrement()) @id
  brandName String
  published Boolean @default(false)
  enrolledAt DateTime? @default(now())
  ownerId Int

  food Foods[]

  User Users @relation(fields: [ownerId], references: [userId], onDelete: Cascade )

}

model Foods{
  foodId Int @default(autoincrement()) @id
  gram Int
  name String
  dueDate DateTime?
  createdDate DateTime?
  updatedAt DateTime?
  deletedAt DateTime?
  ownerId Int
  FridgeId Int

  User Users @relation(fields: [ownerId], references: [userId], onDelete: Cascade)
  Fridge Refrigerators @relation(fields: [FridgeId], references: [fridgeId], onDelete: Cascade)


}